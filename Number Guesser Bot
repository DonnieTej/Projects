import random

def bot_guess():
    low = 1
    high = 100
    attempts = 0

    print("Would you like to pick a number or have the computer generate one")
    print("Type 'p' to pick your number between 1 to 100 or 'g' for the computer to generate it for you.")
    
    while True:
        choice = input("Input --> ").lower()
        if choice == 'p':
            target = int(input("Enter a number between 1 to 100 --> "))
            while target < low or target > high:
                print("Please enter a number between 1 to 100.")
                target = int(input("Enter a number between 1 to 100 --> "))
            break
        elif choice == 'g':
            target = random.randint(low, high)
            print("JARVIS will try to guess the number between 1 to 100")
            break
        else:
            print("Please enter a valid choice (either 'p' or 'g').")

    while True:
        attempts += 1
        bot_guess = (low + high) // 2
        print(f"Bot's guess is: {bot_guess}")

        if bot_guess == target:
            print(f"The number generated by the computer was {target}")
            print(f"Bot guessed the number {bot_guess} correctly in {attempts} attempts.")
            break
        elif bot_guess < target:
            print("The bot's guess is too low.")
            low = bot_guess + 1
        else:
            print("The bot's guess is too high.")
            high = bot_guess - 1

bot_guess()
